= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      h2 = "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      ul
        - @post.errors.full_messages.each do |message|
          li = message

  .form-group
    = f.label :title
    = f.text_field :title
  .form-group
    = f.label :content
    = f.text_area :content
  .form-group
    = f.label :image
    = f.file_field :image, class: 'form-control'
  .actions = f.submit
